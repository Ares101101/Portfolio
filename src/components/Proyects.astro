        image: '/753shots_so.webp',
        tags:['ASTRO', 'TAILWIND', 'JavaScript', 'REACT'],
    }

]   
---
 <article class=' flex  flex-col gap-8' >
    {
        PROYECTS.map(({title, description, tags, image, github, link})=>(
            <ProyecCard 
            title={title} 
            description={description} 
            tags={tags} 
            image={image}
            link={link}
            github={github}
            />
        ))
    }
 </article>
